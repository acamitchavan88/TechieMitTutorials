import java.util.Arrays;
import java.util.LinkedHashMap;
import java.util.Map;
import java.util.Scanner;
import java.util.function.Function;
import java.util.stream.Collectors;
/*
 * Author #TechieMit
 *  Java 8 program to count number of all characters in String
 */
public class ProgramCountAllChars {

	public static void main(String[] args) {
		System.out.println("Enter the string of which characters to be counted");
		Scanner scan=new Scanner(System.in);
		String inputString=scan.next();
		Map<String, Long> charCountMap = Arrays.stream(inputString.split("")).map(String::toLowerCase).collect(Collectors.groupingBy(s -> s, LinkedHashMap::new, Collectors.counting()));  
		System.out.println("Total no  of charcters with count "+charCountMap);
	}

}
